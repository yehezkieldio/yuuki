{
    "$schema": "https://json.schemastore.org/lefthook.json",
    "pre-commit": {
        "commands": {
            "biome_check": {
                "glob": "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}",
                "run": "bunx biome check --no-errors-on-unmatched --files-ignore-unknown=true {staged_files}"
            }
        }
    }
}
